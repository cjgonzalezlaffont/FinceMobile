<!-- item_recycler_view.xml -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemObjFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Título -->

                <TextView
                    android:id="@+id/fragObjTxtViewTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="8dp"
                    android:text="Título"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Monto Máximo -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragObjTxtViewMontoMaxLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meta: $"
                        android:textColor="#888888"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/fragObjTxtViewMonto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Monto Máximo"
                        android:textColor="#888888"
                        android:layout_marginStart="5dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Tipo -->

                <TextView
                    android:id="@+id/fragObjTxtViewFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/fragObjTxtViewProgressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progreso"
            android:textSize="15sp"
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/fragObjProgressBarHorizontal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:max="100"
            android:layout_weight="1" />

    </LinearLayout>

</FrameLayout>
